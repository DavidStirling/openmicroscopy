<?xml version="1.0" encoding="utf-8"?>
<project name="python" default="install" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">

    <echo>Entering ${basedir}...</echo>

    <property name="env.DESTDIR"    value="${up-two}/target/"/>
    <property name="env.ICE_CONFIG" value="${basedir}/../../../etc/ice.config"/>
    <property name="MARK" value="not broken"/>

    <defineVariables/>

    <tstamp>
        <format property="python_build_year" pattern="yyyy"/>
    </tstamp>
    <echo file="${basedir}/omero_version.py">
omero_version = "${omero.version}"
ice_compatibility = "${versions.ice}"
build_year = "${python_build_year}"
</echo>

    <target name="test-compile" description="Dummy target for python since no compile needed"/>

    <macrodef name="run_py">
        <attribute name="failonerror" default="true"/>
        <element name="args" implicit="true"/>
        <sequential>
            <exec executable="python" failonerror="@{failonerror}">
                <args/>
            </exec>
        </sequential>
    </macrodef>

    <macrodef name="download">
        <attribute name="url"/>
        <attribute name="file"/>
        <attribute name="expected"/>
        <sequential>
            <mkdir dir="../target/downloads"/>
            <mkdir dir="../target/build/lib"/>
            <local name="dest"/>
            <local name="calculated"/>
            <local name="mismatch"/>
            <property name="dest" value="../target/downloads/@{file}"/>
            <get dest="${dest}" usetimestamp="true">
                <url url="@{url}/@{file}"/>
            </get>
            <checksum file="${dest}" algorithm="MD5" fileext=".md5"/>
            <loadfile property="calculated" srcFile="${dest}.md5"/>
            <condition property="mismatch">
                <not><equals arg1="@{expected}" arg2="${calculated}" trim="true"/></not>
            </condition>
            <fail if="${mismatch}" message="@{file}: checksum error"/>
        </sequential>
    </macrodef>

    <target name="python-download">
        <download url="${versions.omero-py-url}" file="omero-py-${versions.omero-py}.tar.gz" expected="${versions.omero-py-md5}"/>
        <!-- unfortunately more verbose than should be necessary -->
        <untar src="../target/downloads/omero-py-${versions.omero-py}.tar.gz" dest="../target/python/lib" compression="gzip">
            <globmapper from="omero-py-${versions.omero-py}/target/*" to="./*" />
        </untar>
        <untar src="../target/downloads/omero-py-${versions.omero-py}.tar.gz" dest="../target/bin" compression="gzip">
            <globmapper from="omero-py-${versions.omero-py}/bin/*" to="./*" />
        </untar>
        <chmod file="../target/bin/omero" perm="ugo+x"/>
        <!-- TODO: new download -->

        <download url="${versions.omero-scripts-url}" file="v${versions.omero-scripts}.tar.gz" expected="${versions.omero-scripts-md5}"/>
        <untar src="../target/downloads/v${versions.omero-scripts}.tar.gz" dest="../target/lib/scripts" compression="gzip">
            <!-- Could be improved with an artifact -->
            <patternset>
                <include name="scripts-${versions.omero-scripts}/omero/**/*"/>
                <include name="scripts-${versions.omero-scripts}/README*"/>
            </patternset>
            <globmapper from="scripts-${versions.omero-scripts}/*" to="./*" />
        </untar>

        <download url="${versions.omero-web-url}" file="${versions.omero-web}.tar.gz" expected="${versions.omero-web-md5}"/>
        <untar src="../target/downloads/${versions.omero-web}.tar.gz" dest="../target/python/lib" compression="gzip">
            <!-- Could be improved with an artifact -->
            <patternset>
                <include name="omero-web-${versions.omero-web}/omero/**/*"/>
                <include name="omero-web-${versions.omero-web}/omeroweb/**/*"/>
            </patternset>
            <globmapper from="omero-web-${versions.omero-web}/*" to="./*" />
        </untar>

        <download url="${versions.omero-dropbox-url}" file="${versions.omero-dropbox}.tar.gz" expected="${versions.omero-dropbox-md5}"/>
        <untar src="../target/downloads/${versions.omero-dropbox}.tar.gz" dest="../target/python/lib" compression="gzip">
            <!-- Could be improved with an artifact -->
            <patternset>
                <include name="omero-dropbox-${versions.omero-dropbox}/src/**/*"/>
            </patternset>
            <globmapper from="omero-dropbox-${versions.omero-dropbox}/src/*" to="./*" />
        </untar>

    </target>

    <target name="python-build" unless="env.NOPYTHON">
        <property name="py.target" value="${basedir}/build/lib"/>
        <mkdir dir="${py.target}"/>
        <setup_py>
            <arg value="build"/>
            <arg value="--build-platlib"/>
            <arg value="${py.target}"/>
            <arg value="--build-purelib"/>
            <arg value="${py.target}"/>
        </setup_py>
        <setup_py>
            <arg value="bdist_egg"/>
        </setup_py>
    </target>

    <target name="python-test" unless="env.NOPYTHON">
        <antcall target="python-test-single" inheritRefs="true" inheritAll="true"/>
        <antcall target="python-test-suite" inheritRefs="true" inheritAll="true"/>
    </target>

    <target name="python-test-single" if="TEST">
        <mkdir dir="${testreports.dir}"/>
        <py_test target="${TEST}">
            <optionalArgs/>
        </py_test>
    </target>

    <target name="python-test-suite" unless="TEST">
        <mkdir dir="${testreports.dir}"/>
        <if>
            <not>
                <equals arg1="${MARK}" arg2=""/>
            </not>
            <then>
                <py_test target="${basedir}/test/unit">
                    <optionalArgs>
                        <arg value="-m ${MARK}"/>
                    </optionalArgs>
                </py_test>
            </then>
            <else>
                <py_test target="${basedir}/test/unit">
                    <optionalArgs/>
                </py_test>
            </else>
        </if>
    </target>

    <target name="python-integration" unless="env.NOPYTHON">
        <mkdir dir="${testreports.dir}"/>
        <if>
            <not>
                <equals arg1="${MARK}" arg2=""/>
            </not>
            <then>
                <py_test target="${basedir}/test/integration">
                    <optionalArgs>
                        <arg value="-m ${MARK}"/>
                    </optionalArgs>
                </py_test>
            </then>
            <else>
                <py_test target="${basedir}/test/integration">
                    <optionalArgs/>
                </py_test>
            </else>
        </if>
    </target>

    <macrodef name="py_test">
        <attribute name="target" default="${basedir}/test"/>
        <element name="optionalArgs" optional="y"/>
        <sequential>
            <setup_py failonerror="${test.with.fail}">
                <env key="OMERODIR" value="${dist.dir}"/>
                <env key="ICE_CONFIG" value="${env.ICE_CONFIG}"/>
                <arg value="test"/>
                <optionalArgs/>
                <arg value="-v"/>
                <arg value="-t"/>
                <arg file="@{target}"/>
                <arg value="--junitxml=${testreports.dir}/junit-results.xml"/>
            </setup_py>
        </sequential>
    </macrodef>

    <target name="python-install" depends="python-download" unless="env.NOPYTHON">
        <copy todir="../target/lib/python">
            <fileset dir="${basedir}/build/lib" includes="**/*"/>
        </copy>
    </target>

    <target name="python-clean" depends="python-download" unless="env.NOPYTHON">
        <setup_py>
            <arg value="clean"/>
        </setup_py>
        <delete dir="${basedir}/build"/>
        <delete dir="${basedir}/dist"/>
        <delete file="${basedir}/ez_setup.pyc"/>
        <delete file="${basedir}/omero_version.py"/>
        <delete>
            <fileset dir="${basedir}" includes="setuptools*egg"/>
        </delete>
    </target>

    <target name="findbugs">
        <echo>Not yet implemented</echo>
    </target>

</project>
